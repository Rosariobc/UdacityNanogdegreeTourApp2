<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.tourapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DowntownActivity"
            android:label="@string/category_downtown"
            android:parentActivityName="com.example.android.tourapp.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.tourapp.MainActivity" />
        </activity>
        <activity
            android:name=".MidtownActivity"
            android:label="@string/category_midtown"
            android:parentActivityName="com.example.android.tourapp.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.tourapp.MainActivity" />
        </activity>
        <activity
            android:name=".NorthActivity"
            android:label="@string/category_north"
            android:parentActivityName="com.example.android.tourapp.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.tourapp.MainActivity" />
        </activity>
        <activity
            android:name=".EastActivity"
            android:label="@string/category_east"
            android:parentActivityName="com.example.android.tourapp.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.tourapp.MainActivity" />
        </activity>

    </application>

</manifest>